<%- include("../Layout/Adminlayout/admin_header") %>

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->
            <%- include('../Layout/Adminlayout/admin_navbar') %>
                <!-- partial -->
                <div class="container-fluid page-body-wrapper">
                    <!-- partial:partials/_settings-panel.html -->
                    <%- include('../Layout/Adminlayout/admin_settingspanel') %>
                        <!-- partial -->
                        <!-- partial:partials/_sidebar.html -->
                        <%- include('../Layout/Adminlayout/admin_sidebar') %>
                            <!-- partial -->

                            <div class="main-panel">
                                <div class="content-wrapper">
                                    <div class="row">

                                        <div class="col-lg-12 grid-margin stretch-card">

                                          
                                            <div class="card">
                                                <div class="card-body">
                                                    <h4 class="card-title">Products</h4>
                                                    <a href="/admin/add-products">
                                                        <button class="btn btn-primary">Add</button>
                                                    </a>
                                                    <div class="table-responsive pt-3">
                                                        <table class="table table-bordered">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        Sl.No
                                                                    </th>
                                                                    <th>
                                                                        Name
                                                                    </th>
                                                                   
                                                                    <th>
                                                                        Catagory
                                                                    </th>
                                                                     <th>
                                                                        Image
                                                                    </th>
                                                                    <th>
                                                                        Quantity
                                                                    </th>
                                                                    <th>
                                                                        Price
                                                                    </th>
                                                                    <th>
                                                                        Actions
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% let serialNumber=1; %>
                                                                    <% products.forEach(element => { %>
                                                                        <tr>

                                                                            <td>
                                                                                <%= serialNumber %>
                                                                            </td>
                                                                            <td>
                                                                                <%= element.name %>
                                                                            </td>
                                                                            <td>
                                                                                <%= element.category.name %>
                                                                            </td>
                                                            
                                                                            
                                                                            <td>
                                                                                <a href="#"><img src="/Images/product-images/<%= element.images[0] %>" height="100em" width="100em" alt="<%- element.images[0]%>"></a></td>
                                                                            
                                                                            <td>
                                                                                <%= element.quantity %>
                                                                                
                                                                            </td>
                                                                            <td>
                                                                                <%= element.price %>
                                                                            </td>
                                                                            <% if (element.is_delete === true){ %>
                                                                                <td>
                                                                                    <label class="text-danger">Deactive</label>
                                                                                  </td>
                                                                                   <td>
                                                                                    <a href="/admin/getProductEdit/<%= element._id %>" class="btn btn-primary">Edit</a>
                                                                                    <a href="/admin/products/Active/<%= element._id %>" class="btn btn-success">Active</a>
                                                                                   </td>
                                                                                  <%} else {%>
                                                                                    <td>
                               
                                                                                        <label class="text-success">Active</label>
                                                                                    </td>
                                                                                     <td>
                                                                                      <a href="/admin/getProductEdit/<%= element._id %>" class="btn btn-primary">Edit</a>
                                                                                      <a href="/admin/products/Deactive/<%= element._id %>" class="btn btn-danger">Deactive</a>
                                                                                     </td>
                                                                                 <% }%>
                                                                                  
                                                                              </tr>
                                                                        <% serialNumber++; %>
                                                                            <% }) %>

                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!-- content-wrapper ends -->
                                <!-- partial:../../partials/_footer.html -->
                                <%- include('../Layout/Adminlayout/admin_footer') %>
                                    <!-- partial -->
                            </div>
                            <!-- main-panel ends -->
                </div>
                <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->

        <!-- plugins:js -->
        <script src="vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="vendors/chart.js/Chart.min.js"></script>
        <script src="vendors/datatables.net/jquery.dataTables.js"></script>
        <script src="vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
        <script src="js/dataTables.select.min.js"></script>

        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="js/off-canvas.js"></script>
        <script src="js/hoverable-collapse.js"></script>
        <script src="js/template.js"></script>
        <script src="js/settings.js"></script>
        <script src="js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page-->
        <script src="js/dashboard.js"></script>
        <script src="js/Chart.roundedBarCharts.js"></script>
        <!-- End custom js for this page-->
    </body>

    </html>